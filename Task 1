#include <stdio.h>

int main() {
    int a, b, sum;
    int *p1, *p2;

    // Read two numbers
    printf("Enter first number: ");
    scanf("%d", &a);

    printf("Enter second number: ");
    scanf("%d", &b);

    // Assign addresses to pointers
    p1 = &a;
    p2 = &b;

    // Add using pointers
    sum = *p1 + *p2;

    // Display result
    printf("\nSum of %d and %d is: %d\n", a, b, sum);

    return 0;
}
