#include <stdio.h>

int main() {
    int arr[100], n, i;
    int *p;

    printf("Enter the number of elements: ");
    scanf("%d", &n);

    printf("Enter %d elements:\n", n);
    for(i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // Point pointer to the last element
    p = &arr[n - 1];

    printf("\nArray elements in reverse order:\n");
    for(i = n - 1; i >= 0; i--) {
        printf("%d ", *p);
        p--;   // Move pointer backwards
    }

    return 0;
}
